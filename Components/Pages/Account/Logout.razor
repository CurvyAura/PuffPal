@page "/logout"

@inject IAccountManagement Acct; // Injects the account management service for logout functionality
@inject NavigationManager NavManager; // Injects the navigation manager for page redirection

<!-- Logout page header -->
<h3>Logout</h3>

@code {
    // Optional: AuthorizeView component (currently unused)
    private AuthorizeView? authView;

    // Runs when the component is initialized
    protected async override Task OnInitializedAsync()
    {
        // Check if the user is authenticated
        if (await Acct.CheckAuthAsync())
        {
            // Log out the user
            await Acct.LogoutAsync();

            // Redirect to the login page after logout
            NavManager.NavigateTo("/login");
        }
    }
}

